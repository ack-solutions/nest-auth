{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolvePackageJsonExports": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@ackplus/nest-auth-contracts": [
        "../../packages/nest-auth-contracts/dist/index.d.ts"
      ],
      "@ackplus/nest-auth-contracts/*": [
        "../../packages/nest-auth-contracts/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}